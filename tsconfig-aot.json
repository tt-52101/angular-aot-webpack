{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "module": "es2015",
    "lib":["es2015","dom"],
    "target": "es5",
    "declaration":true,
    "baseUrl":"./node_modules",

    "paths":{
    },

    "moduleResolution":"node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError":true

  },
  "include": [
    "demo/**/*.ts"
  ],
  "angularCompilerOptions":{
    "strictMetadataEmit":true
  },
  "compileOnSave": false
}
