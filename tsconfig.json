{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib":["es2015","dom"],
    "target": "es5",
    "baseUrl":"./node_modules",
    "paths":{
      "@ng-ztw":["../ngzModule"],
      "*":["../ngzModule/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //cannot find name 'require':
    "moduleResolution":"node"
  },

  "include": [
    "demo/**/*.ts"
  ],
  "compileOnSave": false
}
